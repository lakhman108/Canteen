# Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-here-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Database Settings (External PostgreSQL)
DB_NAME=canteen_db
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_HOST=your-database-host.com
DB_PORT=5432

# Optional: Create superuser on startup
CREATE_SUPERUSER=false

# Optional: Seed database from CSV files on startup
SEED_DATABASE=false

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID=your-razorpay-key
RAZORPAY_KEY_SECRET=your-razorpay-secret

# MinIO/S3 Storage Configuration
USE_S3=True  # Set to False to use local storage with WhiteNoise
AWS_ACCESS_KEY_ID=myname
AWS_SECRET_ACCESS_KEY=mypass
AWS_STORAGE_BUCKET_NAME=canteen
AWS_S3_URL=https://s3.sarthivideo.tech
AWS_S3_ENDPOINT_URL=https://api-s3.sarthivideo.tech